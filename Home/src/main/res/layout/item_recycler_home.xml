<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:padding="10dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_recycler_image"
        android:scaleType="centerCrop"
        android:src="@drawable/wallpaper14"
        android:layout_width="190dp"
        android:layout_height="200dp">
    </ImageView>

    <TextView
        android:paddingLeft="5dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:textColor="#000000"
        android:textSize="15sp"
        android:text="Apple 2019款Macbook Pro 13.3苹果"
        android:id="@+id/item_recycler_title"
        android:maxLines="2"
        android:layout_width="190dp"
        android:layout_height="50dp">
    </TextView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="190dp"
        android:layout_height="25dp">

        <TextView
            android:layout_marginLeft="5dp"
            android:text="￥"
            android:textColor="#FF0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/item_recycler_price"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:text="8999.00"
            android:layout_width="70dp"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:textColor="#FF0000"
            android:padding="2dp"
            android:text="满减"
            android:background="@drawable/stroke_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            android:text="看相似"
            android:background="@drawable/circle_background02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>

</LinearLayout>