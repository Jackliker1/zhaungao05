<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="ownerPayment"
            type="com.bawei.shoppingcar.view.PaymentActivity" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <ImageView
                            android:id="@+id/payment_toShop"
                            android:layout_centerVertical="true"
                            android:src="@drawable/to_shop"
                            android:layout_width="30dp"
                            android:layout_height="match_parent">
                        </ImageView>

                        <TextView
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textSize="17sp"
                            android:text="店铺详情"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="115dp">

                        <TextView
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#FFFFFF"
                            android:background="#FF0000"
                            android:layout_marginLeft="10dp"
                            android:text="默认"
                            android:layout_width="40dp"
                            android:layout_height="25dp">
                        </TextView>

                        <TextView
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#FFFFFF"
                            android:background="#2196F3"
                            android:layout_marginLeft="55dp"
                            android:text="家"
                            android:layout_width="40dp"
                            android:layout_height="25dp">
                        </TextView>

                        <TextView
                            android:id="@+id/payment_address_province"
                            android:gravity="center_vertical"
                            android:text="广东 广州 越秀区"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginLeft="105dp"
                            android:textSize="15sp"
                            android:layout_width="match_parent"
                            android:layout_height="25dp">
                        </TextView>

                        <TextView
                            android:id="@+id/payment_address_home"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:textSize="15sp"
                            android:textColor="#000000"
                            android:layout_marginTop="35dp"
                            android:text="东风中路268号 1109-1110"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp">
                        </TextView>

                        <TextView
                            android:id="@+id/payment_phone"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:textSize="15sp"
                            android:textColor="#000000"
                            android:layout_marginTop="70dp"
                            android:text="张小白  181***0260"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp">
                        </TextView>

                        <ImageView
                            android:id="@+id/payment_toUpdate"
                            android:layout_alignParentRight="true"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/update_address"
                            android:layout_width="50dp"
                            android:layout_height="match_parent">
                        </ImageView>

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:background="#EEEEEE"
                    android:layout_width="match_parent"
                    android:layout_height="15dp">
                </View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:textSize="17sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000000"
                        android:text="支付方式"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:layout_marginRight="55dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textSize="17sp"
                        android:textColor="#000000"
                        android:text="在线支付"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/more_pay"
                        android:layout_width="30dp"
                        android:layout_height="25dp">
                    </ImageView>

                </RelativeLayout>

                <View
                    android:background="#EEEEEE"
                    android:layout_width="match_parent"
                    android:layout_height="15dp">
                </View>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="235dp">

                    <TextView
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="JD 京东自营"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/payment_goods_images"
                            android:layout_width="270dp"
                            android:layout_height="100dp">
                        </androidx.recyclerview.widget.RecyclerView>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/payment_goods_num"
                                android:textSize="15sp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="55dp"
                                android:textColor="#000000"
                                android:gravity="center"
                                android:text="共 2 件"
                                android:layout_width="60dp"
                                android:layout_height="25dp">
                            </TextView>

                            <ImageView
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/more_pay"
                                android:layout_width="30dp"
                                android:layout_height="25dp">
                            </ImageView>

                        </RelativeLayout>

                    </LinearLayout>

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="25dp">
                    </TextView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp">

                        <TextView
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textSize="17sp"
                            android:text="配送"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>

                        <TextView
                            android:textSize="15sp"
                            android:gravity="center"
                            android:background="@drawable/side"
                            android:textColor="#FF0000"
                            android:text="可选京尊达"
                            android:layout_marginLeft="60dp"
                            android:layout_width="80dp"
                            android:layout_height="25dp">
                        </TextView>

                        <TextView
                            android:textSize="15sp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="55dp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:text="京东快递"
                            android:layout_width="60dp"
                            android:layout_height="25dp">
                        </TextView>

                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/more_pay"
                            android:layout_width="30dp"
                            android:layout_height="25dp">
                        </ImageView>

                    </RelativeLayout>

                    <TextView
                        android:layout_marginRight="55dp"
                        android:gravity="right"
                        android:text="11月30日[今天]15:00-21:00"
                        android:layout_width="match_parent"
                        android:layout_height="25dp">
                    </TextView>

                </LinearLayout>

                <View
                    android:background="#EEEEEE"
                    android:layout_width="match_parent"
                    android:layout_height="15dp">
                </View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:text="发票"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="165dp"
                        android:textColor="#FF0000"
                        android:gravity="center"
                        android:text="电子"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp">
                    </TextView>

                    <TextView
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="55dp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:text="(商品明细-个人)"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp">
                    </TextView>

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/more_pay"
                        android:layout_width="30dp"
                        android:layout_height="25dp">
                    </ImageView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:text="优惠券"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="55dp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:text="无可用"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp">
                    </TextView>

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/more_pay"
                        android:layout_width="30dp"
                        android:layout_height="25dp">
                    </ImageView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:text="京豆"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:textSize="15sp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="95dp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:text="共760，满1000可用"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp">
                    </TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:text="礼品卡(京东卡/E卡)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="55dp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:text="无可用"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp">
                    </TextView>

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/more_pay"
                        android:layout_width="30dp"
                        android:layout_height="25dp">
                    </ImageView>

                </RelativeLayout>

                <View
                    android:background="#EEEEEE"
                    android:layout_width="match_parent"
                    android:layout_height="15dp">
                </View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:text="商品金额"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:layout_toLeftOf="@+id/payment_goods_price"
                        android:textSize="12sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="95dp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:text="￥"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp">
                    </TextView>

                    <TextView
                        android:id="@+id/payment_goods_price"
                        android:paddingTop="1dp"
                        android:textStyle="bold"
                        android:layout_marginRight="15dp"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#000000"
                        android:gravity="right"
                        android:text="8999.00"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp">
                    </TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:text="运费(总重:4.96.kg)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:layout_toLeftOf="@+id/payment_goods_freight"
                        android:textSize="12sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="95dp"
                        android:textColor="#FF0000"
                        android:gravity="center"
                        android:text="￥"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp">
                    </TextView>

                    <TextView
                        android:layout_marginRight="70dp"
                        android:layout_alignParentRight="true"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="95dp"
                        android:textColor="#FF0000"
                        android:gravity="center"
                        android:text="+"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp">
                    </TextView>

                    <TextView
                        android:id="@+id/payment_goods_freight"
                        android:paddingTop="1dp"
                        android:textStyle="bold"
                        android:layout_marginRight="15dp"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#FF0000"
                        android:gravity="left"
                        android:text="8.00"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp">
                    </TextView>

                </RelativeLayout>

                <View
                    android:background="#EEEEEE"
                    android:layout_width="match_parent"
                    android:layout_height="65dp">
                </View>

            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:background="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="￥"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FF0000"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/payment_bar_price"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:textSize="17sp"
                android:text="8999.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <Button
                android:onClick="@{(view)->ownerPayment.payOrder(view)}"
                android:id="@+id/payment_pay_btn"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text="提交订单"
                android:background="@drawable/background_circle"
                android:layout_width="100dp"
                android:layout_height="40dp">
            </Button>

        </RelativeLayout>

    </RelativeLayout>

</layout>