<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <CheckBox
        android:id="@+id/item_shopping_cb"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.CompoundButton.RadioButton">
    </CheckBox>

    <ImageView
        android:layout_margin="10dp"
        android:scaleType="centerInside"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:id="@+id/item_shopping_image">
    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="15sp"
            android:text="￥"
            android:textColor="#FF0000"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:layout_width="20dp"
            android:layout_height="20dp">
        </TextView>

        <TextView
            android:id="@+id/item_shopping_price"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="8999.00"
            android:textColor="#FF0000"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="25dp"
            android:layout_alignParentBottom="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:ellipsize="end"
            android:maxLines="2"
            android:id="@+id/item_shopping_title"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="百事可乐无糖Pepsi"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </TextView>

        <TextView
            android:id="@+id/item_shopping_plus"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textSize="20sp"
            android:text="+"
            android:layout_width="30dp"
            android:layout_height="30dp">
        </TextView>

        <TextView
            android:id="@+id/item_shopping_num"
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textSize="20sp"
            android:text=""
            android:layout_width="30dp"
            android:layout_height="30dp">
        </TextView>

        <TextView
            android:id="@+id/item_shopping_subtract"
            android:layout_marginRight="70dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textSize="20sp"
            android:text="—"
            android:layout_width="30dp"
            android:layout_height="30dp">
        </TextView>

    </RelativeLayout>

</LinearLayout>