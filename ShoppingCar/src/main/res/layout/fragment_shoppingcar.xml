<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="ownerShoppingCar"
            type="com.bawei.shoppingcar.view.ShoppingCarFragment" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/shopping_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="#EEEEEE"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <ImageView
                        android:src="@drawable/recommend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </ImageView>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:text="为你推荐"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/shopping_recommend_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <CheckBox
                android:id="@+id/shopping_checkAll"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:text="全选"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </CheckBox>

            <TextView
                android:id="@+id/shopping_sumPrice"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="合计：￥0.00"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_width="140dp"
                android:layout_height="40dp">
            </TextView>

            <TextView
                android:id="@+id/shopping_delete"
                android:textSize="20sp"
                android:gravity="center"
                android:text="删除"
                android:layout_gravity="center_vertical"
                android:layout_width="60dp"
                android:layout_height="40dp">
            </TextView>

            <Button
                android:layout_marginRight="15dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/background_circle"
                android:textColor="#FFFFFF"
                android:text="去结算(0)"
                android:layout_gravity="center_vertical"
                android:id="@+id/shopping_commit"
                android:layout_width="110dp"
                android:layout_height="40dp">
            </Button>

        </LinearLayout>

    </RelativeLayout>

</layout>