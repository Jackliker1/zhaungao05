<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="190dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_width="180dp"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/item_recycler_recommend_image"
            android:layout_width="180dp"
            android:layout_height="180dp">
        </ImageView>

        <ImageView
            android:id="@+id/item_recycler_recommend_close"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/input_icon_close_grey_m_normal"
            android:layout_width="25dp"
            android:layout_height="25dp">
        </ImageView>

    </RelativeLayout>

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/item_recycler_recommend_title"
        android:text="标题标题标题标题标题标题标题标题标题标题标题标题标题"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_width="180dp"
        android:layout_height="40dp">
    </TextView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:textColor="#FF0000"
            android:text="￥"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/item_recycler_recommend_price"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:layout_marginTop="15dp"
            android:textSize="17dp"
            android:text="8999.00"
            android:layout_width="70dp"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:padding="3dp"
            android:background="@drawable/side"
            android:textSize="17dp"
            android:layout_marginTop="15dp"
            android:textColor="#FF0000"
            android:text="满减"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/shopcar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>

    </LinearLayout>



</LinearLayout>